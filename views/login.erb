<!DOCTYPE HTML>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">

		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link href="/css/bootstrap.min.css" rel="stylesheet">
		<link href="/css/bootstrap.css" rel="stylesheet">
		<link href="/css/style.css" rel="stylesheet">



		<script src="/js/bootstrap.js" type="text/javascript" ></script>
		<script src="/js/bootstrap.min.js" type="text/javascript"></script>
		
		<title>My Own Chat</title>
	</head>
	<body class="<%= @web %> col-xs-12">
		
	

		<div class="container">
			<div class="cabecera-logo img-responsive col-xs-12 col-sm-offset-4 col-lg-offset-4  col-sm-4 col-lg-4"> <img src="/img/logo.png" ></div>

			<div class="logeo col-xs-12 col-sm-offset-4 col-lg-offset-4  col-sm-4 col-lg-4">
				<% if @no_existe != false %>
					<p class="mensaje-password"> Usuario o contraseña erronea </p>
				<% end %>
				<form class="col-xs-12 col-sm-12 col-lg-12" action="/" method="post">

					<div class="input-group">
					  <span class="input-group-addon">User</span>
					  <input type="text" name="user_log" value="" class="mf form-control" placeholder="Nombre de usuario..." autofocus>
					</div>
					<br>
					<div class="input-group">
						<span class="input-group-addon">Pass</span>
					  <input type="password" name="pass_log" value="" class="mf form-control" placeholder="Contraseña..." autofocus>
					</div>	
					<br>
					<button type="submit" id="LogIn" class="btn btn-default">Log in</button>
					<br>
				</form>
			</div>

			<br><br>

			<div class="registro col-xs-12 col-sm-offset-4 col-lg-offset-4  col-sm-4 col-lg-4">
				<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
	  				<div class="panel panel-default">
	    				<div class="panel-heading" role="tab" id="headingTwo">
	      					<h4 class="panel-title">
	      						<a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
	          						¿Aún no tienes cuenta?
	        					</a>
	      					</h4>
	    				</div>
	    				<div id="collapseTwo" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingTwo">
	    					<div class="panel-body">
	    						<% if @existe_user == true %>
	    							<p class="mensaje-user"> El  usuario ya existe</p>
	    						<% end %>
								<form class="col-xs-12 col-sm-12 col-lg-12" action="/registro" method="post">
									<div class="input-group">
									  <span class="input-group-addon">User</span>
									  <input type="text" name="user_reg" value="" class="mf form-control" placeholder="Nombre de usuario..." autofocus>
									</div>
									<br>
									<div class="input-group">
										<span class="input-group-addon">Pass</span>
										<input type="password" id="pass1" name="pass_reg" value="" class="mf form-control" placeholder="Contraseña..." autofocus>
									</div>	
									<br> 
									<div class="input-group">
										<span class="input-group-addon">Pass</span>
									  	<input type="password" id="pass2" name="pass2_reg" value="" class="mf form-control" placeholder="Confirmar contraseña..." autofocus>
									</div>
									<p id="mensaje-password" class="mensaje-password"></p>
									<button type="submit" class="btn btn-default">Sign up</button>
									<br>
								</form>
							</div>
						</div>
					</div>
				</div>
	    	</div>
  		</div>
  		<script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  		<script src= "/js/bootstrap.min.js"></script>
		<script src= "/js/bootstrap.js"></script>
		<script src= "js/check.js"></script>
	</body>
</html>